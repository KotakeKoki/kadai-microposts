  <% if current_user.favoriting?(micropost) %>
    <%= form_with(model: current_user.favorites.find_by(favpost_id: micropost.id), local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :favpost_id, @micropost.id %>
      <%= f.submit 'Unfav', class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
      <%= hidden_field_tag :favpost_id, micropost.id %>
      <%= f.submit 'Favorite', class: 'btn btn-primary btn-block' %>
    <% end %>
  <% end %>
