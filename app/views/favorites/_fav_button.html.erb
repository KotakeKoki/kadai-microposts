<% if @micropost.favorited_by?(current_user) %>
   <%= link_to post_favorite_path(@micropost), method: :DELETE do %>
   <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
   <%= @micropost.favorites.count %>like
   <% end %>
<% else %>
  <%= link_to post_favorites_path(@micropost) , method: :POST do %>
  <i class="fa fa-heart-o" aria-hidden="true"></i>
  <%= @micropost.favorites.count %>like
  <% end %>
<% end %>